<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="8dp" />
            <padding
                android:bottom="10dp"
                android:left="10dp"
                android:right="10dp"
                android:top="10dp" />
            <gradient
                android:type="radial"
                android:angle="46"
                android:centerColor="#6d5dab"
                android:endColor="#6d5dab"
                android:startColor="#3498db" />
        </shape>
    </item>
</layer-list>
