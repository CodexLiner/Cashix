<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Crepaid" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <item name="colorPrimary">@color/colorMain</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/purple_700</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:colorEdgeEffect">@color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowTranslucentNavigation">false</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/limeWhite</item>
        <!-- Customize your theme here. -->

    </style>
    <style name="StripeToolBarStyle.noColor" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@color/limeWhite</item>
        <item name="colorPrimaryVariant">@color/limeWhite</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="colorSecondary">#FFFFFF</item>
        <item name="colorSecondaryVariant">@color/activitybg</item>
        <item name="colorOnSecondary">@color/activitybg</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/limeWhite</item>
    </style>
    <style name="myStyle" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/limeWhite</item>
        <item name="android:windowBackground">@drawable/layer</item>
        <item name="colorPrimary">@color/red</item>
        <item name="colorPrimaryVariant">@color/teal_200</item>
        <item name="colorOnPrimary">#AEEA00</item>
    </style>
    <style name="Theme.Crepaid.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.Crepaid.Splash" >
        <item name="android:windowBackground">@color/splash_color</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/splash_color</item>
    </style>
    <style name="Theme.Crepaid.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.Crepaid.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>