<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:overScrollMode="never"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".payment.cardActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_gravity="center"
                android:gravity="center"
                android:id="@+id/headingLayout"
                android:background="@drawable/home_activity_shape_all"
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="0dp"
                    android:drawablePadding="0dp"
                    android:fontFamily="@font/poppins_medium"
                    android:gravity="center"
                    android:letterSpacing="0.05"
                    android:text="CheckOut"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:drawableTint="@color/black" />
            </RelativeLayout>
            <LinearLayout
                android:background="@drawable/home_activity_shape_all"
                android:gravity="center"
                android:layout_gravity="center"
                android:elevation="1dp"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp"
                android:layout_marginBottom="12dp"
                android:id="@+id/transaction"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_below="@id/headingLayout"
                android:orientation="vertical">
                <TextView
                    android:maxLength="6"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:theme="@style/myStyle"
                    android:background="@null"
                    android:id="@+id/amountText"
                    android:textColor="#3E44C5"
                    android:fontFamily="@font/poppins_medium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="10,000"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textSize="35sp"/>
            </LinearLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:itemCount="1"/>
            <LinearLayout
                android:gravity="center"
                android:layout_gravity="center"
                android:elevation="1dp"
                android:background="@drawable/card_drop_shape"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp"
                android:layout_marginBottom="12dp"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_below="@id/headingLayout"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:background="@drawable/add_card_shape"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:padding="10dp"
                            android:layout_margin="10dp"
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_baseline_add_24"
                            app:tint="@color/black" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginTop="2dp"
                        android:layout_marginStart="10dp"
                        android:layout_gravity="center"
                        android:gravity="center|start"
                        android:layout_weight="2"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:letterSpacing="0.1"
                            android:textStyle="bold"
                            android:fontFamily="@font/poppins_medium"
                            android:layout_gravity="center"
                            android:textColor="@color/black"
                            android:textSize="15sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Add New Card" />
                    </LinearLayout>

                    <RadioButton
                        android:visibility="invisible"
                        android:padding="5dp"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:layout_gravity="center|bottom"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/basic_shape"
            android:elevation="1dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/poppins"
                android:gravity="center"
                android:letterSpacing="0.01"
                android:text="Continue to Pay"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="bold" />

        </LinearLayout>
    </RelativeLayout>

</LinearLayout>