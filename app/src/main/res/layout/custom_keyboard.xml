<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:background="@color/white"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_1"
                android:layout_width="0dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:background="@color/white"
                android:elevation="0dp"
                android:fontFamily="@font/poppins"
                android:textStyle="bold"
                android:text="1"
                android:textColor="#8D8D8E"
                android:textSize="20sp"
                android:theme="@null" />
            <Button
                android:textColor="#8D8D8E"
                android:fontFamily="@font/poppins"
                android:textStyle="bold"
                android:text="2"
                android:textSize="20sp"
                android:elevation="0dp"
                android:background="@color/white"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="90dp"
                android:id="@+id/btn_2"/>
            <Button
                android:textColor="#8D8D8E"
                android:fontFamily="@font/poppins"
                android:textStyle="bold"
                android:text="3"
                android:textSize="20sp"
                style="@null"
                android:theme="@null"
                android:elevation="0dp"
                android:background="@color/white"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="90dp"
                android:id="@+id/btn_3"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:textColor="#8D8D8E"
                android:fontFamily="@font/poppins"
                android:textStyle="bold"
                android:text="4"
                android:textSize="20sp"
                style="@null"
                android:theme="@null"
                android:elevation="0dp"
                android:background="@color/white"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="90dp"
                android:id="@+id/btn_4"/>
            <Button
                android:textColor="#8D8D8E"
                android:fontFamily="@font/poppins"
                android:textStyle="bold"
                android:text="5"
                android:textSize="20sp"
                style="@null"
                android:theme="@null"
                android:elevation="0dp"
                android:background="@color/white"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="90dp"
                android:id="@+id/btn_5"/>
            <Button
                android:textColor="#8D8D8E"
                android:fontFamily="@font/poppins"
                android:textStyle="bold"
                android:text="6"
                android:textSize="20sp"
                style="@null"
                android:theme="@null"
                android:elevation="0dp"
                android:background="@color/white"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="90dp"
                android:id="@+id/btn_6"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:textColor="#8D8D8E"
                android:fontFamily="@font/poppins"
                android:textStyle="bold"
                android:text="7"
                android:textSize="20sp"
                style="@null"
                android:theme="@null"
                android:elevation="0dp"
                android:background="@color/white"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="90dp"
                android:id="@+id/btn_7"/>
            <Button
                android:textColor="#8D8D8E"
                android:fontFamily="@font/poppins"
                android:textStyle="bold"
                android:text="8"
                android:textSize="20sp"
                style="@null"
                android:theme="@null"
                android:elevation="0dp"
                android:background="@color/white"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="90dp"
                android:id="@+id/btn_8"/>
            <Button
                android:textColor="#8D8D8E"
                android:fontFamily="@font/poppins"
                android:textStyle="bold"
                android:text="9"
                android:textSize="20sp"
                style="@null"
                android:theme="@null"
                android:elevation="0dp"
                android:background="@color/white"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="90dp"
                android:id="@+id/btn_9"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:textColor="#8D8D8E"
                android:fontFamily="@font/poppins"
                android:textStyle="bold"
                android:text="."
                android:textSize="20sp"
                style="@null"
                android:theme="@null"
                android:elevation="0dp"
                android:background="@color/white"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="90dp"
                android:id="@+id/btn_dot"/>
            <Button
                android:textColor="#8D8D8E"
                android:fontFamily="@font/poppins"
                android:textStyle="bold"
                android:text="0"
                android:textSize="20sp"
                style="@null"
                android:theme="@null"
                android:elevation="0dp"
                android:background="@color/white"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="90dp"
                android:id="@+id/btn_0"/>
            <Button
                android:textColor="#8D8D8E"
                android:fontFamily="@font/poppins"
                android:textStyle="bold"
                android:text="@string/q"
                android:textSize="20sp"
                style="@null"
                android:theme="@null"
                android:elevation="0dp"
                android:background="@color/white"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="90dp"
                android:id="@+id/btn_del"/>
        </LinearLayout>
    </LinearLayout>

</merge>