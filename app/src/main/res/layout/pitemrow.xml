<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/home_activity_shape_all">

        <ImageView
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:id="@+id/recImage"
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:src="@drawable/wwlogo"/>
        <LinearLayout
            android:gravity="start"
            android:layout_gravity="start|center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/recHead"
                android:layout_marginTop="10dp"
                android:layout_marginStart="5dp"
                android:layout_marginBottom="2dp"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Lorem ipsum dolor sit amet,"
                android:layout_gravity="start|center"
                android:gravity="start|center"
                android:textSize="20dp"/>

            <TextView
                android:id="@+id/recDesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start|center"
                android:layout_margin="5dp"
                android:fontFamily="@font/poppins"
                android:gravity="start|center"
                android:text="nesciunt nihil aut nostrum explicabo reprehenderit optio amet ab temporibus asperiores quasi cupiditate. Voluptatum ducimus voluptates voluptas? World"
                android:textSize="15dp" />
            <Button
                android:id="@+id/recbuttom"
                android:padding="5dp"
                android:textSize="13sp"
                android:background="@drawable/button_main_yellow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DIG IN"
                android:layout_gravity="end"
                android:layout_marginEnd="10dp"/>
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>