<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/limeWhite"
    android:overScrollMode="never"
    android:scrollbars="none">

    <RelativeLayout
        android:id="@+id/mainLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/headingLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true">
            <!--    heading edit here -->
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/vectorImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/headingLayout">
            <!--    vector image edit here-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start">

                <TextView
                    android:id="@+id/ForceExit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start|center"
                    android:drawablePadding="10dp"
                    android:gravity="center"
                    android:padding="20dp"
                    android:text="Add bank Account"
                    android:textAllCaps="true"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    app:drawableStartCompat="@drawable/ic_op_left" />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/vectorImage"
            android:padding="10dp">

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:text="Almost there"
                    android:textColor="@color/black"
                    android:textSize="17sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="5dp"
                    android:text="add your primary bank details to get payout\'s instantly"
                    android:textStyle="normal" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:orientation="vertical">

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:gravity="start"
                        android:hint="Account Holder"
                        android:padding="0dp"
                        app:boxStrokeColor="@color/black"
                        app:boxStrokeWidth="0.5dp"
                        app:boxStrokeWidthFocused="0.5dp"
                        app:hintTextColor="@color/black"
                        app:startIconDrawable="@drawable/ic_name">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/holderName"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:drawablePadding="0dp"
                            android:gravity="center|start"
                            android:inputType="textEmailAddress" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:gravity="start"
                        android:hint="Bank Name"
                        android:padding="0dp"
                        app:boxStrokeColor="@color/black"
                        app:boxStrokeWidth="0.5dp"
                        app:boxStrokeWidthFocused="0.5dp"
                        app:hintTextColor="@color/black"
                        app:startIconDrawable="@drawable/ic_bank">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/bankname"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:drawablePadding="0dp"
                            android:gravity="center|start"
                            android:inputType="textEmailAddress" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/nameProfile"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:gravity="start"
                        android:hint="IFSC Code"
                        android:padding="0dp"
                        app:boxStrokeColor="@color/black"
                        app:boxStrokeWidth="0.5dp"
                        app:boxStrokeWidthFocused="0.5dp"
                        app:hintTextColor="@color/black"
                        app:startIconDrawable="@drawable/ic_ifsc">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/bankIFSC"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:drawablePadding="0dp"
                            android:gravity="center|start"
                            android:inputType="text" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:gravity="start"
                        android:hint="Account Number"
                        android:padding="0dp"
                        app:boxStrokeColor="@color/black"
                        app:boxStrokeWidth="0.5dp"
                        app:boxStrokeWidthFocused="0.5dp"
                        app:hintTextColor="@color/black"
                        app:startIconDrawable="@drawable/ic_number">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/accountNumber"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:drawablePadding="0dp"
                            android:gravity="center|start"
                            android:inputType="numberDecimal" />
                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="20dp"
                    android:orientation="horizontal"
                    android:visibility="gone">


                    <CheckBox
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginStart="20dp"
                        android:checked="true"
                        android:clickable="false"
                        android:gravity="left|center" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="25dp"
                        android:layout_gravity="center"
                        android:layout_marginStart="5dp"
                        android:layout_weight="1"
                        android:gravity="center|left"
                        android:text="@string/accept_privacy_policy"
                        android:textColor="#000000" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/addBank"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:layout_weight="1"
                        android:text="Continue"
                        android:textAllCaps="false" />

                    <Button
                        android:id="@+id/skipButton"
                        style="?attr/materialButtonOutlinedStyle"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:layout_weight="1"
                        android:padding="10dp"
                        android:text="Do it Later"
                        android:textAllCaps="false"
                        app:strokeColor="@color/black"
                        app:strokeWidth="1dp" />


                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>

    </RelativeLayout>
</ScrollView>