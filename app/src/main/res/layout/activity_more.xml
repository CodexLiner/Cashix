<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:overScrollMode="never"
    android:scrollIndicators="none"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/limeWhite"
    tools:context=".UI.MoreActivity">
    <LinearLayout
        android:paddingBottom="52dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_alignParentTop="true"
            android:id="@+id/headingLayout"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal">
            <TextView
                android:layout_weight="1"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="BACK"
                android:drawablePadding="5dp"
                android:layout_gravity="center"
                android:gravity="center|start"
                android:textStyle="bold"
                android:textSize="15sp"
                android:layout_marginStart="0dp"
                app:drawableLeftCompat="@drawable/ic_op_left"
                app:drawableTint="@color/black" />
        </LinearLayout>
        <LinearLayout
            android:background="@drawable/home_activity_shape_all"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_op_more"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/userDetails"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                android:orientation="horizontal"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/home_activity_shape_all"
                android:layout_width="match_parent"
                android:layout_height="75dp">
                <ImageView
                    android:padding="13dp"
                    android:layout_gravity="center"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_op_user"/>
               <LinearLayout
                   android:gravity="center"
                   android:layout_gravity="center"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:orientation="vertical">
                   <TextView
                       android:textColor="@color/black"
                       android:fontFamily="@font/poppins"
                       android:textSize="16sp"
                       android:layout_gravity="start"
                       android:layout_marginStart="20dp"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="@string/your_profile"/>
                   <TextView
                       android:textSize="12sp"
                       android:layout_gravity="start"
                       android:layout_marginStart="20dp"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="@string/complete_your_profile_for_instant_settlements"/>
               </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/bankAccount"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                android:orientation="horizontal"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/home_activity_shape_all"
                android:layout_width="match_parent"
                android:layout_height="75dp">
                <ImageView
                    android:layout_gravity="center"
                    android:padding="13dp"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_op_bank"/>
                <LinearLayout
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:textColor="@color/black"
                        android:fontFamily="@font/poppins"
                        android:textSize="16sp"
                        android:layout_gravity="start"
                        android:layout_marginStart="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bank Details"/>
                    <TextView
                        android:textSize="12sp"
                        android:layout_gravity="start"
                        android:layout_marginStart="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/add_bank_account_for_recieving_payouts"/>
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/mTransactions"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                android:orientation="horizontal"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/home_activity_shape_all"
                android:layout_width="match_parent"
                android:layout_height="75dp">
                <ImageView
                    android:layout_gravity="center"
                    android:padding="13dp"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_op_trans"/>
                <LinearLayout
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:textColor="@color/black"
                        android:fontFamily="@font/poppins"
                        android:textSize="16sp"
                        android:layout_gravity="start"
                        android:layout_marginStart="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Transactions"/>
                    <TextView
                        android:textSize="12sp"
                        android:layout_gravity="start"
                        android:layout_marginStart="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/your_all_transaction_history"/>
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/mBillers"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                android:orientation="horizontal"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/home_activity_shape_all"
                android:layout_width="match_parent"
                android:layout_height="75dp">
                <ImageView
                    android:layout_gravity="center"
                    android:padding="13dp"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_op_trans2"/>
                <LinearLayout
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:textColor="@color/black"
                        android:fontFamily="@font/poppins"
                        android:textSize="16sp"
                        android:layout_gravity="start"
                        android:layout_marginStart="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Manage Biller's"/>
                    <TextView
                        android:textSize="12sp"
                        android:layout_gravity="start"
                        android:layout_marginStart="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/add_or_manage_biller_s_for_rents"/>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/helpSupport"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                android:orientation="horizontal"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/home_activity_shape_all"
                android:layout_width="match_parent"
                android:layout_height="75dp">
                <ImageView
                    android:layout_gravity="center"
                    android:padding="13dp"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_op_help"/>
                <LinearLayout
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:textColor="@color/black"
                        android:fontFamily="@font/poppins"
                        android:textSize="16sp"
                        android:layout_gravity="start"
                        android:layout_marginStart="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/help_support"/>
                    <TextView
                        android:textSize="12sp"
                        android:layout_gravity="start"
                        android:layout_marginStart="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/ask_something_we_will_help_you"/>
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/termCondtion"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                android:orientation="horizontal"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/home_activity_shape_all"
                android:layout_width="match_parent"
                android:layout_height="75dp">
                <ImageView
                    android:layout_gravity="center"
                    android:padding="13dp"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_op_term"/>
                <LinearLayout
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:textColor="@color/black"
                        android:fontFamily="@font/poppins"
                        android:textSize="16sp"
                        android:layout_gravity="start"
                        android:layout_marginStart="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/terms_amp_condition"/>
                    <TextView
                        android:textSize="12sp"
                        android:layout_gravity="start"
                        android:layout_marginStart="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/terms_and_condition_that_make_us_diffrent"/>
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/privacyPolicy"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                android:orientation="horizontal"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/home_activity_shape_all"
                android:layout_width="match_parent"
                android:layout_height="75dp">
                <ImageView
                    android:layout_gravity="center"
                    android:padding="12dp"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_op_privacy"/>
                <LinearLayout
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:textColor="@color/black"
                        android:fontFamily="@font/poppins"
                        android:textSize="16sp"
                        android:layout_gravity="start"
                        android:layout_marginStart="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Privacy Policy"/>
                    <TextView
                        android:textSize="12sp"
                        android:layout_gravity="start"
                        android:layout_marginStart="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/know_your_all_data_is_safe"/>
                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:id="@+id/rateUs"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                android:orientation="horizontal"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/home_activity_shape_all"
                android:layout_width="match_parent"
                android:layout_height="75dp">
                <ImageView
                    android:layout_gravity="center"
                    android:padding="13dp"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_op_rate"/>
                <LinearLayout
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:textColor="@color/black"
                        android:fontFamily="@font/poppins"
                        android:textSize="16sp"
                        android:layout_gravity="start"
                        android:layout_marginStart="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rate us"/>
                    <TextView
                        android:textSize="12sp"
                        android:layout_gravity="start"
                        android:layout_marginStart="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/tell_us_what_you_think"/>
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/aboutUs"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                android:orientation="horizontal"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/home_activity_shape_all"
                android:layout_width="match_parent"
                android:layout_height="75dp">
                <ImageView
                    android:layout_gravity="center"
                    android:padding="13dp"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_op_logo"/>
                <LinearLayout
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:textColor="@color/black"
                        android:fontFamily="@font/poppins"
                        android:textSize="16sp"
                        android:layout_gravity="start"
                        android:layout_marginStart="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="About us"/>
                    <TextView
                        android:textSize="12sp"
                        android:layout_gravity="start"
                        android:layout_marginStart="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Version 1.3.4"/>
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/logOut"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                android:orientation="horizontal"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/home_activity_shape_all"
                android:layout_width="match_parent"
                android:layout_height="60dp">
                <ImageView
                    android:layout_gravity="center"
                    android:padding="13dp"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_op_power"/>
                <LinearLayout
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:textColor="@color/red"
                        android:fontFamily="@font/poppins"
                        android:textSize="16sp"
                        android:layout_gravity="start"
                        android:layout_marginStart="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Logout"/>
                    <TextView
                        android:visibility="gone"
                        android:textSize="12sp"
                        android:layout_gravity="start"
                        android:layout_marginStart="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Complete Your Profile For Instant Settlements"/>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


</ScrollView>